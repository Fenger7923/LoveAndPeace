<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="@dimen/p_40dp"-->
<!--        android:layout_alignParentBottom="true"-->
<!--        android:background="#FFFFEE"-->
<!--        android:orientation="horizontal" />-->

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/p_20dp"
        android:layout_alignParentBottom="true"
        android:background="#0000"
        android:orientation="horizontal"
        android:visibility="visible">

        <View
            android:id="@+id/v_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="#FFFFEE" />

        <View
            android:id="@+id/v_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="#FFFFEE" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlLefts"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0fff">

    </RelativeLayout>

    <View
        android:id="@+id/vBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#99FFFFEE"/>

    <ImageView
        android:id="@+id/iv_chick_heart"
        android:layout_width="@dimen/p_150dp"
        android:layout_height="@dimen/p_80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:src="@drawable/click_heart" />

    <TextView
        android:id="@+id/tvPiontMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#BD1A25"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/iv_chick_heart"
        android:layout_alignRight="@id/iv_chick_heart"
        android:textSize="@dimen/p_16dp"
        android:layout_marginRight="@dimen/p_20dp"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/p_40dp"
        android:text="      这  里  哟"/>

</RelativeLayout>