<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFEE">

    <RelativeLayout
        android:id="@+id/rl_tree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#FFFFEE">

        <ImageView
            android:id="@+id/iv_tree"
            android:layout_width="@dimen/p_300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/p_10dp"
            android:visibility="visible" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_heart"
        android:layout_width="@dimen/p_50dp"
        android:layout_height="@dimen/p_50dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/p_90dp"
        android:src="@drawable/heart"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="@dimen/p_350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/p_30dp"
        android:layout_marginTop="@dimen/p_20dp">

        <TextView
            android:id="@+id/tv_to"
            android:layout_width="@dimen/p_350dp"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:textStyle="bold|italic"
            android:textColor="#000"
            android:textSize="@dimen/p_18sp" />

        <TextView
            android:id="@+id/tv_context"
            android:layout_width="@dimen/p_300dp"
            android:layout_marginTop="@dimen/p_10dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_to"
            android:textStyle="italic|bold"
            android:lineSpacingMultiplier="1.2"
            android:textColor="#000"
            android:textSize="@dimen/p_11dp" />

        <TextView
            android:id="@+id/tv_bottom"
            android:layout_width="@dimen/p_110dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_context"
            android:textStyle="bold|italic"
            android:lineSpacingMultiplier="1.2"
            android:layout_marginTop="@dimen/p_5dp"
            android:layout_alignParentRight="true"
            android:textColor="#000"
            android:layout_marginRight="@dimen/p_5dp"
            android:textSize="@dimen/p_11dp" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/p_30dp"
        android:layout_marginTop="@dimen/m_65dp"
        android:lineSpacingMultiplier="1.2"
        android:textStyle="bold"
        android:textColor="#000"
        android:visibility="gone"
        android:textSize="@dimen/p_27sp" />

<!--    <View-->
<!--        android:id="@+id/v1"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="@dimen/p_5dp"-->
<!--        android:layout_alignParentBottom="true"-->
<!--        android:layout_marginBottom="20dp"-->
<!--        android:background="#231E1F" />-->

