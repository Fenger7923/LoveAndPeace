<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_dialog"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="#00000000"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relative_layout1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/p_300dp"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_heart1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/p_300dp"
            android:scaleType="centerInside"
            android:paddingRight="@dimen/p_5dp"
            android:src="@drawable/heart"/>

        <ImageView
            android:id="@+id/iv_yes"
            android:layout_width="@dimen/p_50dp"
            android:layout_height="@dimen/p_50dp"
            android:layout_below="@id/vvv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/p_8dp"
            android:visibility="gone"
            android:src="@drawable/yes"/>

        <TextView
            android:id="@+id/vvv"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_height="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_layout2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/p_300dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/p_300dp"
            android:scaleType="centerInside"
            android:paddingRight="@dimen/p_5dp"
            android:src="@drawable/heart"/>

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="@dimen/p_150dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:visibility="gone"
            android:lineSpacingMultiplier="1.2"
            android:layout_height="wrap_content"
            android:text="这一片灿烂烟火\n只会因为你\n永远绽放！"
            android:textColor="#fff"
            android:textSize="@dimen/p_15sp"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="@dimen/p_150dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@+id/tv_text"
            android:lineSpacingMultiplier="1.2"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/p_8dp"
            android:visibility="gone"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="@dimen/p_16sp"/>

    </RelativeLayout>

</RelativeLayout>